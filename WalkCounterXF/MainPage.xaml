<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalkCounterXF.MainPage">

    <Grid
        Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label
            FontSize="18"
            Text="{Binding Year}" />
        <Label
            Grid.Row="1"
            Text="to go"
        />
        <Label
            Grid.Row="2"
            Text="done"
        />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding ToGo}"
        />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding Done}"
        />
        <Entry
            x:Name="distanceEntry"
            Grid.Row="3"
            Text="{Binding Distance, Mode=TwoWay}"/>
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Text="Enter"
            Command="{Binding SaveCommand}"
        />
        <Label
            Grid.Row="4"
            Grid.ColumnSpan="2"
            TextColor="Red"
            Text="{Binding Info}"
        />
    </Grid>

</ContentPage>
